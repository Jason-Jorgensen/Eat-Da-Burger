<div class="container">
    <div class="row">
        <div class="col-xl-2 mx-auto my-4">
            <img src="https://cdn.pixabay.com/photo/2013/07/12/16/53/burger-151421_960_720.png" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="burger image" >
        </div>
    </div>
    
     <h3 class="" style="text-align: center;">Eat-Da-Burger!</h3>
    

    <div class="row">
        <div class="col-6 mx-auto">
        <div class="form" id="create-form">
            <div class="form-group">
              <label for=""></label>
              <input type="text"
                class="form-control" name="burgerInput" id="burgerInput" aria-describedby="helpId" placeholder="Type in a burger">
            </div>
            <div class="text-center">
            <button type="button" id="btn"  class="btn btn-primary" style="font-size: 10px;">Submit</button>
            </div>   
            <div class="text-center my-2">
            <button type="button" id="deleteBtn"  class="btn btn-warning" style="font-size: 10px;">ClearDB</button>
            </div>
        </div>     
        </div>
    </div>
    
    
    <div class="row text-center">
        <div class="col-6 mx-auto">
            <h4 class="text-center">Menu</h4>
            {{#each burgers}}
            {{#unless devoured}}
            <div>
            <p class="my-0">{{this.burger_name}}</p>
            <button type="button" class="eatBtn btn btn-danger" style="font-size: 10px;" data-id="{{id}}">Eat!</button>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-6 mx-auto">
            <h4 class="text-center">Already Eaten</h4>
            {{#each burgers}}
            {{#if devoured}}
            <p>{{this.burger_name}}</p>
            {{/if}}
            {{/each}}
        </div>
    </div>

  




</div>

